{
  "manifest_version": 3,
  "name": "Odoo Kaching â€” Payment Sound",
  "version": "0.1.1",
  "description": "Play a cashier sound when an element `o_payment_successful` appears on an Odoo page.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "scripting"],
  "optional_host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "*.mp3",
        "*.wav",
        "sound1.mp3",
        "sound2.mp3"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
